package shazam.controller;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JPanel;

import shazam.view.Result;
import shazam.view.View;

public class Controller {
	View vw;
	Controller(View vw)
	{
		this.vw=vw;
	}
	
	
	public void initActions()
	{
		
		vw.getMatch().addActionListener(new ActionListener(){

			@Override
			public void actionPerformed(ActionEvent e) {
				Result result = new Result("Rammstein - Les Arènes de Nîmes");
		        showResult(result);				
			}
			
		});
	}
	
public void showResult(JPanel panel){
	
		
		JFrame frame = new JFrame();
		new Listener(frame);
		frame.add(panel);
		frame.pack();
		frame.setVisible(true);
	}
	
}
